<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.SearchActivity" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
    <style name="Theme.SearchActivity.Wallpaper" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/wallpaper_mask</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>
    
    <style name="Theme.FloatingDialog.Grid" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustResize</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.FloatingDialog.Grid</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    
    <style name="Theme.FloatingDialog.List" parent="@android:style/Theme.Light.NoTitleBar">
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustResize</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.FloatingDialog.List</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Animation.FloatingDialog.Grid" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/floating_dialog_grid_open</item>
        <item name="android:windowExitAnimation">@anim/floating_dialog_grid_close</item>
    </style>
    
    <style name="Animation.FloatingDialog.List" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/floating_dialog_list_open</item>
        <item name="android:windowExitAnimation">@anim/floating_dialog_list_close</item>
    </style>
</resources>
